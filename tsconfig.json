{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noLib": false,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@swiss-digital-assets-institute/core": ["../core/src/index.ts"],
      "@swiss-digital-assets-institute/lifecycle": ["../lifecycle/src/index.ts"],
      "@swiss-digital-assets-institute/messages": ["../messages/src/index.ts"],
      "@swiss-digital-assets-institute/publisher-internal": [
        "../publisher-internal/src/index.ts"
      ],
      "@swiss-digital-assets-institute/registrar": ["../registrar/src/index.ts"],
      "@swiss-digital-assets-institute/resolver": ["../resolver/src/index.ts"],
      "@swiss-digital-assets-institute/signer-internal": ["../signer-internal/src/index.ts"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "tests/**/*.ts", "dist"],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
