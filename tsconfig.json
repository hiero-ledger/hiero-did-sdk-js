{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noLib": false,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@hashgraph-did-sdk/core": ["../core/src"],
      "@hashgraph-did-sdk/lifecycle": ["../lifecycle/src"],
      "@hashgraph-did-sdk/messages": ["../messages/src"],
      "@hashgraph-did-sdk/publisher-internal": ["../publisher-internal/src"],
      "@hashgraph-did-sdk/registrar": ["../registrar/src"],
      "@hashgraph-did-sdk/resolver": ["../resolver/src"],
      "@hashgraph-did-sdk/signer-internal": ["../signer-internal/src"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
