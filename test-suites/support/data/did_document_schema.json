{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "DIDDocument HCS Event Schema",
    "description": "The schema describing event payload for a DIDDocument object inside a Hedera DID HCS message.",
    "required": [
        "id",
        "controller",
        "verificationMethod"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^did:hedera:(mainnet|testnet|local-node):[0-9A-Za-z]+_\\d+\\.\\d+\\.\\d+$"
        },
        "controller": {
            "type": "string",
            "pattern": "^did:hedera:(mainnet|testnet|local-node):[0-9A-Za-z]+_\\d+\\.\\d+\\.\\d+$"
        },
        "verificationMethod": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^did:hedera:(mainnet|testnet|local-node):[0-9A-Za-z]+_\\d+\\.\\d+\\.\\d+#did-root-key$"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "Ed25519VerificationKey2020"
                        ]
                    },
                    "controller": {
                        "type": "string",
                        "pattern": "^did:hedera:(mainnet|testnet|local-node):[0-9A-Za-z]+_\\d+\\.\\d+\\.\\d+$"
                    },
                    "publicKeyMulitbase": {
                        "type": "string",
                        "pattern": "^[0-9A-Za-z]+$"
                    }
                }
            }
        }
    }
}