{
  "name": "@hiero-did-sdk/verifier-internal",
  "version": "0.1.4",
  "description": "This package provides the `verifier` class, a core component of the Hiero DID SDK. It enables digital signature verification for Decentralized Identifiers (DIDs) using the ED25519 algorithm.",
  "author": {
    "name": "The Hashgraph Association",
    "url": "https://www.hashgraph.swiss/"
  },
  "bugs": {
    "url": "https://github.com/hiero-ledger/hiero-did-sdk-js/issues"
  },
  "license": "Apache-2.0",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/browser/index.esm.js",
  "react-native": "./dist/browser/index.cjs.js",
  "exports": {
    "types": "./dist/index.d.ts",
    "browser": "./dist/browser/index.esm.js",
    "react-native": "./dist/browser/index.cjs.js",
    "require": "./dist/index.cjs.js",
    "import": "./dist/index.esm.js",
    "default": "./dist/index.esm.js"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hiero-ledger/hiero-did-sdk-js.git",
    "directory": "packages/verifier-internal"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "compile": "tsup",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "pnpm clean && pnpm compile",
    "format": "prettier --write \"src/**/*.ts\" \"tests/*.ts\"",
    "format-check": "prettier --check \"src/*.ts\" \"tests/*.ts\""
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.72.0",
    "@hiero-did-sdk/core": "workspace:*",
    "buffer": "^6.0.3"
  }
}
