{
  "name": "hashgraph-did-sdk",
  "type": "module",
  "scripts": {
    "docs:build": "antora antora-playbook.yml",
    "docs:serve": "npx http-server ./build/site",
    "test:cucumber": "TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js --config cucumber.mjs --exit",
    "packages:build": "lerna run build",
    "packages:test": "jest",
    "packages:test:ci": "npm run packages:test -- --ci --coverage --testLocationInResults --json --outputFile=coverage/report.json",
    "packages:lint": "eslint 'packages/**/**.ts'",
    "packages:release:major": "lerna version major --no-push --yes",
    "packages:release:minor": "lerna version minor --no-push --yes",
    "packages:release:patch": "lerna version patch --no-push --yes",
    "packages:release:premajor": "lerna version premajor --no-push --yes",
    "packages:release:preminor": "lerna version preminor --no-push --yes",
    "packages:release:prepatch": "lerna version prepatch --no-push --yes",
    "packages:release:prerelease": "lerna version prerelease --no-push --yes",
    "packages:publish": "lerna publish from-git --yes",
    "hedera:start": "ts-node ./test_suites/hederaLocalNode.ts",
    "prepublishOnly": "npm run packages:build"
  },
  "devDependencies": {
    "@antora/cli": "^3.1.9",
    "@antora/site-generator-default": "^3.1.9",
    "@cucumber/cucumber": "^11.0.1",
    "@eslint/js": "^9.13.0",
    "@sntke/antora-mermaid-extension": "^0.0.6",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.8.6",
    "ajv": "^8.17.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.8",
    "prettier": "^3.3.3",
    "testcontainers": "^10.13.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "tsup": "^8.3.4",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.53.0",
    "@scure/base": "^1.1.9"
  },
  "workspaces": [
    "packages/*"
  ]
}
