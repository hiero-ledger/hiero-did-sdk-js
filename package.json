{
  "name": "@hiero-did-sdk/root",
  "private": true,
  "scripts": {
    "docs:build": "antora antora-playbook.yml",
    "docs:serve": "npx http-server ./build/site",
    "clean": "pnpm -r clean",
    "build": "pnpm -r build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --testLocationInResults --json --outputFile=coverage/report.json",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"packages/**/src/**/*.ts\" \"packages/**/tests/*.ts\" \"examples/**/*.ts\"",
    "format-check": "prettier --check \"packages/**/src/*.ts\" \"packages/**/tests/*.ts\" \"examples/**/*.ts\"",
    "release": "pnpm build && pnpm changeset publish --no-git-tag",
    "changeset-prepare": "pnpm format && pnpm lint:fix",
    "changeset-create": "pnpm changeset",
    "changeset-version": "pnpm changeset version",
    "examples:run": "tsx --env-file examples/.env"
  },
  "devDependencies": {
    "@antora/cli": "^3.1.14",
    "@antora/site-generator-default": "^3.1.14",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.38.0",
    "@hashgraph/sdk": "^2.75.0",
    "@scure/base": "^1.2.6",
    "@sntke/antora-mermaid-extension": "^0.0.6",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.12",
    "babel-jest": "^29.7.0",
    "buffer": "^6.0.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.2",
    "jest": "^29.7.0",
    "node-stdlib-browser": "^1.3.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "testcontainers": "^10.28.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
