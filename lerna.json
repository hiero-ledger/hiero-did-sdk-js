{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "version": "0.3.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com",
      "assets": ["LICENSE", "README.md", "package.json"],
      "directory": "{workspaceRoot}/{projectRoot}"
    },
    "version": {
      "message": "chore(release): publish %s",
      "exact": true
    }
  }
}
